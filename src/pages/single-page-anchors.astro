---
import Layout from "../layouts/Layout.astro";
import GraphicSpecies from "../components/GraphicSpecies.astro";
---

<Layout>
  <nav class="bg-blue-600 text-white p-4 mb-6">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-xl font-bold">Penguins Data Visualization</h1>
      <div class="flex items-center space-x-4">
        <a href="/" class="hover:underline">Accueil</a>
        <a href="/species/Adelie/" class="hover:underline">Pages individuelles</a>
        <a href="/test-inframe/" class="hover:underline">Test Iframe</a>
        <a href="/single-page-anchors/" class="font-bold underline">Page avec ancres</a>
        <a href="/single-page-tabs/" class="hover:underline">Page avec onglets</a>
      </div>
    </div>
  </nav>

  <main class="container mx-auto px-4">
    <h1 class="text-3xl font-bold mb-6 text-center">
      Toutes les espèces - Navigation par ancres
    </h1>

    
    <div class="mb-8">
      <div class="flex justify-center items-center space-x-6 bg-gray-100 p-4 rounded-lg sticky top-4 z-10">
        
        <div class="flex space-x-4">
          <button
            data-species="adelie"
            class="species-btn bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 active"
          >
            Adelie
          </button>
          <button
            data-species="gentoo"
            class="species-btn bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
          >
            Gentoo
          </button>
          <button
            data-species="chinstrap"
            class="species-btn bg-purple-500 text-white px-4 py-2 rounded hover:bg-purple-600"
          >
            Chinstrap
          </button>
        </div>

        <!-- Ou navigation par select -->
        <div class="flex items-center space-x-2 border-l pl-6">
          <label for="anchor-species-select" class="text-gray-700 font-medium">
            Ou choisir:
          </label>
          <select 
            id="anchor-species-select" 
            class="bg-white text-black px-3 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="adelie">Adelie</option>
            <option value="gentoo">Gentoo</option>
            <option value="chinstrap">Chinstrap</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Container du slider -->
    <div class="slider-container">
      <div class="slider-wrapper" id="slider">
        <!-- Section Adelie -->
        <section class="slide" id="adelie">
          <GraphicSpecies species="Adelie" />
          <div class="text-center mt-4 mb-8">
            <p class="text-gray-600">
              Les penguins Adelie sont les plus petits des trois espèces
              étudiées.
            </p>
          </div>
        </section>

        <!-- Section Gentoo -->
        <section class="slide" id="gentoo">
          <GraphicSpecies species="Gentoo" />
          <div class="text-center mt-4 mb-8">
            <p class="text-gray-600">
              Les penguins Gentoo sont les plus grands des trois espèces
              étudiées.
            </p>
          </div>
        </section>

        <!-- Section Chinstrap -->
        <section class="slide" id="chinstrap">
          <GraphicSpecies species="Chinstrap" />
          <div class="text-center mt-4 mb-8">
            <p class="text-gray-600">
              Les penguins Chinstrap sont reconnaissables à leur ligne mentale
              caractéristique.
            </p>
          </div>
        </section>
      </div>
    </div>
  </main>

  <style>
    .slider-container {
      overflow-x: hidden;
      width: 100%;
      position: relative;
    }

    .slider-wrapper {
      display: flex;
      width: 300%; /* 3 slides × 100% */
      transition: transform 0.5s ease-in-out;
    }

    .slide {
      width: 33.333%; /* 100% / 3 slides */
      flex-shrink: 0;
      padding: 0 20px;
      box-sizing: border-box;
    }

    /* Smooth scrolling pour les ancres */
    html {
      scroll-behavior: smooth;
    }

    .species-btn {
      transition: all 0.3s ease;
    }

    .species-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Indicateur actif */
    .species-btn.active {
      box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const slider = document.getElementById("slider");
      const speciesButtons = document.querySelectorAll(".species-btn");
      const speciesSelect = document.getElementById("anchor-species-select");

      
      function moveSlider(speciesName) {
        const speciesIndex = ["adelie", "gentoo", "chinstrap"].indexOf(speciesName.toLowerCase());
        if (speciesIndex === -1) return;

        const translateX = -(speciesIndex * 33.333); 
        slider.style.transform = `translateX(${translateX}%)`;

        
        speciesButtons.forEach((btn, i) => {
          btn.classList.toggle("active", i === speciesIndex);
        });

        
        speciesSelect.value = speciesName.toLowerCase();

        
        history.replaceState(null, "", "#" + speciesName.toLowerCase());
      }

      
      speciesButtons.forEach((btn) => {
        btn.addEventListener("click", function (e) {
          e.preventDefault();
          const species = this.getAttribute("data-species");
          moveSlider(species);

         
          document.querySelector(".slider-container").scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        });
      });

      
      speciesSelect?.addEventListener("change", (evt) => {
  // on peut simplement lire la valeur depuis speciesSelect
  const value = speciesSelect.value;
  moveSlider(value);

  document.querySelector(".slider-container").scrollIntoView({
    behavior: "smooth",
    block: "start",
  });
});

      
      if (speciesButtons.length > 0) {
        speciesButtons[0].classList.add("active");
      }

      
      function handleHashChange() {
        const hash = window.location.hash.substring(1);
        if (hash && ["adelie", "gentoo", "chinstrap"].includes(hash)) {
          moveSlider(hash);
        }
      }

     
      window.addEventListener("hashchange", handleHashChange);

      
      handleHashChange();
    });
  </script>
</Layout>